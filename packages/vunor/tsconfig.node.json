{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.*",
    "uno.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "src/theme/**/*",
    "src/components/**/*",
    "src/components/**/*.vue",
    "components.d.ts",
    "auto-imports.d.ts",
    "env.d.ts",
    "src/vunor.ts",
    "src/utils.ts",
    "src/vite.ts",
    "src/nuxt.ts",
    "src/theme.ts"
  ],
  "paths": {
    "@nuxt/kit": ["node_modules/@nuxt/kit"]
  },
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "lib": ["DOM"],

    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "types": ["node"]
  }
}
